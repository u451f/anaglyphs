{
  "name": "Anaglyphs",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension simply converts a webpage into anaglyphs.",
  "homepage_url": "http://curlybracket.net/2015/10/11/anaglyphs",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": [
		"<all_urls>"
      ],
      "css": [
        "src/inject/inject.css"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ],
  "permissions": ["tabs" ],
  "web_accessible_resources": ["src/inject/inject.html"]
}
