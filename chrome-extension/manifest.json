{
  "name": "Anaglyphs",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension simply converts a webpage into anaglyphs.",
  "homepage_url": "http://curlybracket.net",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Anaglyphs for all pages"
  },
  "content_scripts": [
    {
      "matches": [
        "http://curlybracket.net/*"
      ],
      "css": [
        "src/inject/inject.css"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ],
  "web_accessible_resources": ["src/inject/inject.html"]
}
